@page "/fetchblogdetails"
@using BlazorApp.DBFirst.Shared.Models
@inject HttpClient Http

<h1>Blog List</h1>


@if(blogList == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table table-striped align-middle table-bordered">
        <thead class="table-success">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Created On</th>
                <th>Post</th>
                <th>Published Date</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blog in blogList)
            {
                <tr>
                    <td>@blog.Blogid</td>
                    <td>@blog.Title</td>
                    <td>@blog.CreationDate</td>
                    <td>@blog.PostBody</td>
                    <td>@blog.PublishedDate</td>
                    <td>@(blog.Status ?"Active":"In Active") </td>                    
                </tr>
            }
        </tbody>
    </table>
}


@code {
    protected List<Blog> blogList = new();


    protected override async Task OnInitializedAsync()
    {
        await GetBlogList();
    }
    protected async Task GetBlogList() =>  
        blogList = await Http.GetFromJsonAsync<List<Blog>>("api/Blog");

}
